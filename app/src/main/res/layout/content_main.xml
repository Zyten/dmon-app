<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#7fa87f">

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main_swipe_refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="vertical"
                android:gravity="top">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:weightSum="1"
                android:id="@+id/linearLayout4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:clickable="true"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:padding="0dp"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="154dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="50"
                android:textSize="140dp"
                android:padding="0dp"
                android:id="@+id/APITextView"
                android:textColor="#ffffff"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginTop="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp"
                android:text="Air Pollution Index"
                android:id="@+id/APILabelTextView"
                android:textColor="#ffffff"
                android:layout_gravity="center" />
        </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="true"
                    android:weightSum="3"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="37dp"
                    android:baselineAligned="false"
                    android:id="@+id/linearLayout3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:weightSum="1"
                        xmlns:custom="http://schemas.android.com/apk/res-auto">

                        <com.github.pwittchen.weathericonview.WeatherIconView
                            android:id="@+id/dust_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            custom:weatherIconResource="@string/wi_dust"
                            custom:weatherIconColor="@android:color/white"
                            android:layout_marginRight="7dp"
                            custom:weatherIconSize="30" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:text="dust"
                            android:textSize="16dp"
                            android:id="@+id/dustTextView"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        xmlns:custom="http://schemas.android.com/apk/res-auto">

                        <com.github.pwittchen.weathericonview.WeatherIconView
                            android:id="@+id/temp_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            custom:weatherIconResource="@string/wi_thermometer"
                            custom:weatherIconColor="@android:color/white"
                            android:layout_marginRight="15dp"
                            custom:weatherIconSize="30" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:gravity="left"
                            android:text="temp"
                            android:textSize="16dp"
                            android:id="@+id/tempTextView"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        xmlns:custom="http://schemas.android.com/apk/res-auto">

                        <com.github.pwittchen.weathericonview.WeatherIconView
                            android:id="@+id/humidity_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            custom:weatherIconResource="@string/wi_humidity"
                            custom:weatherIconColor="@android:color/white"
                            custom:weatherIconSize="30" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:gravity="left"
                            android:text="humidity"
                            android:textSize="16dp"
                            android:id="@+id/humidityTextView"
                            android:textColor="#ffffff" />

                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="39dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="MODERATE AIR QUALITY"
                    android:id="@+id/AirDescTextView"
                    android:textColor="#ffffff"
                    android:layout_gravity="center" />

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:weightSum="3"
            android:background ="#55676767"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="39dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="What you should do:"
                android:id="@+id/PrecautionTitleTextView"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/PrecautionTextView"
                android:gravity="left"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:maxLines="4"
                android:textColor="#ffffff"
                android:text="The air quality outside isn't the best, try to avoid sports activity." />
        </LinearLayout>

            </LinearLayout>
        </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last update: "
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="14 Apr 2016 05: 21"
            android:id="@+id/lastupdateTextView"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />
    </LinearLayout>
</RelativeLayout>
