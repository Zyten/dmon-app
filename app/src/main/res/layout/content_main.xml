<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#7fa87f">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Last update: "
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="14 Apr 2016 05: 21"
        android:id="@+id/lastupdateTextView"
        android:textSize="14dp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="56"
            android:textSize="172dp"
            android:id="@+id/APITextView"
            android:textColor="#ffffff"
            android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Moderate Air Quality"
        android:id="@+id/AirDescTextView"
        android:textColor="#ffffff"
        android:layout_gravity="center" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:background ="#55676767"
        android:id="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What you should do"
            android:id="@+id/PrecautionTitleTextView"
            android:textColor="#ffffff" />

        <TextView
        android:id="@+id/PrecautionTextView"
        android:gravity="left"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_weight="0.8"
            android:textSize="20dp"
        android:maxLines="4"
        android:textColor="#ffffff"
        android:text="The air quality outside isn't the best, try to avoid sports activity." />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Dust Density:  "
                android:gravity="right"
                android:textSize="16dp"
                android:id="@+id/textView4"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="left"
                android:text="dust"
                android:textSize="16dp"
                android:id="@+id/dustTextView"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Temperature:  "
            android:gravity="right"
            android:textSize="16dp"
            android:id="@+id/textView5"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="temp"
            android:textSize="16dp"
            android:id="@+id/tempTextView"
            android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="Humidity:  "
            android:textSize="16dp"
            android:id="@+id/textView6"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="humidity"
            android:textSize="16dp"
            android:id="@+id/humidityTextView"
            android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
