<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileActivity"
    tools:showIn="@layout/app_bar_profile"
    android:background="#009688">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.45"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="25dp"
        android:weightSum="1"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/idBirthdayTextView"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/accountIdTextView"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>



        <TextView
            android:id="@+id/genderTextView"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/emailTextView"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.45"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="25dp"
        android:weightSum="1"
        android:id="@+id/relativeLayout2">

    </RelativeLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btnsave1"
        android:layout_marginBottom="102dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="save"
        android:background="@drawable/btnsave1" />

    <AutoCompleteTextView
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="textCapWords"
        android:ems="10"
        android:id="@+id/currResidenceEditText"
        android:hint="Current Residence"
        android:textAlignment="center"
        android:background="#137f64"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_weight="0.07"
        android:layout_above="@+id/btnsave1"
        android:layout_alignLeft="@+id/birthdayEditText"
        android:layout_alignStart="@+id/birthdayEditText"
        android:layout_marginBottom="77dp"
        android:imeOptions="actionDone"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="textCapWords"
        android:ems="10"
        android:id="@+id/homeTownEditText"
        android:hint="Home Town"
        android:textAlignment="center"
        android:background="#137f64"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_weight="0.07"
        android:layout_above="@+id/currResidenceEditText"
        android:layout_alignLeft="@+id/currResidenceEditText"
        android:layout_alignStart="@+id/currResidenceEditText"
        android:layout_marginBottom="21dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/birthdayEditText"
        android:hint="Birthday"
        android:textAlignment="center"
        android:background="#137f64"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_weight="0.07"
        android:focusable="false"
        android:layout_above="@+id/homeTownEditText"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2"
        android:layout_marginBottom="22dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/usernameEditText"
        android:hint="Name"
        android:textAlignment="center"
        android:background="#137f64"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="22dp"
        android:layout_weight="0.07"
        android:textStyle="bold"
        android:layout_above="@+id/birthdayEditText"
        android:layout_alignLeft="@+id/birthdayEditText"
        android:layout_alignStart="@+id/birthdayEditText"
        android:layout_marginBottom="41dp" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/birthdayEditText"
        android:layout_alignRight="@+id/btnsave1"
        android:layout_alignEnd="@+id/btnsave1"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:checked="false"
            android:buttonTint="@color/black"/>

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>


</RelativeLayout>
